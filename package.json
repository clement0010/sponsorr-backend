{
  "name": "functions",
  "scripts": {
    "check:style": "run-p check:style:*",
    "check:style:lint": "lint(){ eslint --ext .js,.ts --max-warnings 0 ${1:-'.'}; }; lint",
    "check:style:format": "prettier --check './**/*'",
    "fix:style:lint": "fixLint(){ eslint --ext .js,.ts --max-warnings 0 --fix ${1:-'.'}; }; fixLint",
    "fix:style:format": "prettier --write './**/*'",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "start:emulators": "firebase emulators:start --only functions, firestore",
    "serve": "concurrently \"npm run build:dev\" \"npm run start:emulators\"",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "mocha src/test/** -r ts-node/register --timeout 5000 --exit",
    "test:dev": "firebase emulators:exec 'npm test'",
    "test:ci": "npm run build && firebase emulators:exec 'npm test'",
    "deploy": "firebase deploy functions, firestore:rules",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@firebase/rules-unit-testing": "^1.3.9",
    "@types/cli-color": "^2.0.0",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "cli-color": "^2.0.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.3",
    "husky": "^7.0.0",
    "mocha": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
